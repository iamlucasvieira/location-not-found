# Streamlit secrets configuration for Google Sheets connection
# Copy this file to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to version control!

# Simple configuration - using public Google Sheets (recommended)
# 1. Make sure your Google Sheet has "Anyone with the link" sharing enabled
# 2. Copy the entire URL of your Google Sheet
[connections.gsheets]
spreadsheet = "https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID/edit#gid=0"
type = "gsheets"

# Optional: Override default settings
[gsheets]
worksheet = "Sheet1"  # Name of the worksheet/tab to read from
ttl = 300  # Cache time-to-live in seconds (default: 300 = 5 minutes)
